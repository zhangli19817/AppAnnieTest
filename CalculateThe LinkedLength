package com.oracle.cloud;

public class LinkedList {

    public static int linkedLen(int[] A){

        int length=0, current=0;
        while(current!=-1) {
            ++length;
            current=A[current];
        }
        return length;
    }

    public static void main(String[] args){

        int[] A={1,4,-1,3,2};
        System.out.println("the length is: "+linkedLen(A));
    }
}


